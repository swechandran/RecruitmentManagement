@model List<RecruitmentManagement.Repository.CandidateApplication>
@{
   
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="candidate-container">
    <h2>
        Manage Candidate Applications
    </h2>
    <link href="~/Content/HRProject/Candidateadminstyle.css" rel="stylesheet" />

    
    @*<p>
        @Html.ActionLink("Create New Application", "Create", "Candidate", new { area = "" }, new { @class = "btn btn-success" })
    </p>*@

    <table class="table">
        <thead>
            <tr>
                <th>Job ID</th>
                <th>Candidate Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Applied Date</th>
                <th>Resume</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    @using (Html.BeginForm("SubmitApplication", "Candidate", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(model => application.ApplicationID)

                        <td>@Html.TextBoxFor(model => application.JobID, new { @class = "form-control", placeholder = "Enter Job ID", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(model => application.CandidateName, new { @class = "form-control", placeholder = "Enter candidate name", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(model => application.Email, new { @class = "form-control", placeholder = "Enter email address", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(model => application.PhoneNumber, new { @class = "form-control", placeholder = "Enter phone number", @readonly = "readonly" })</td>
                        <td>@Html.TextBoxFor(model => application.AppliedDate, new { @class = "form-control", type = "text", @readonly = "readonly" })</td>
                        <td>
                            @if (application.Resume != null && application.Resume.Length > 0)
                            {
                                <a href="@Url.Action("DownloadResume", "Candidate", new { id = application.ApplicationID })" class="btn btn-info">Download Resume</a>
                            }
                            else
                            {
                                <span>No Resume uploaded</span>
                            }
                        </td>
                        <td>
                            <!-- Existing buttons -->
                            <a href="~/Candidate/DeleteConfirmed?ApplicationID=@application.ApplicationID" class="btn btn-danger">Delete</a>

                            <!-- New "Schedule Interview" button -->
                            <a href="@Url.Action("ScheduleInterview", "Interview", new { id = application.ApplicationID })" class="btn btn-primary">Schedule Interview</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    @*<p>
        @Html.ActionLink("Back to List", "Index")
    </p>*@
