@model RecruitmentManagement.Models.CandidateApplication

@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
    var id = (int)Session["JobID"];
}
@Styles.Render("~/Content/HRProject/Candidatecreatestyle.css")
@if (TempData["SuccessMessage"] != null)
{
    <script>alert("@TempData["SuccessMessage"]")</script>
}


<style>
    body {
        background-color: dimgrey;
    }

    label.error {
        color: red;
        font-size: 14px;
    }
</style>

<div class="createContainer">
    <h2 class="heading" style="text-align:center">Candidate Application</h2>
    @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="mainarea">
            <div class="form-horizontal">
                <h4 class="headings">Enter your details below.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input type="text" value="@id" name="JobID" hidden />

                <div class="form-group">
                    @Html.LabelFor(model => model.CandidateName, htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.CandidateName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CandidateName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Resume", htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-12">
                        <input type="file" name="resumeFile" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AppliedDate, htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.AppliedDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.AppliedDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 text-center col-md-12">
                        <input type="submit" value="Apply" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.19.3/additional-methods.min.js"></script>
<script>
    $(document).ready(function () {
        function preventBack() {
            window.history.pushState(null, null, window.location.href);
            window.onpopstate = function () {
                window.history.go(1);
            };
        }

        preventBack();


        $("form").submit(function () {
            preventBack();
        
       
    });
</script>


