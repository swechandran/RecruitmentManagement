
@{
    Layout = null;
}

@model IEnumerable<RecruitmentManagement.Models.Registeration>

@{
    ViewBag.Title = "Registered Users";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Registered Users</h2>

<style>
   
    h2 {
        font-family: 'Poppins', sans-serif;
        padding-top: 14px;
        text-align: center;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        color: #333;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

   
    a {
        text-decoration: none;
        color: #007bff;
        padding: 5px 10px;
    }

        a:hover {
            text-decoration: underline;
            color: #0056b3;
        }

    
    h2 {
        font-family: 'Poppins', sans-serif;
        color: #333;
        margin-bottom: 20px;
    }
</style>

<table>
    <thead>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Email Address</th>
            <th>Address</th>
            <th>State</th>
            <th>City</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.DateOfBirth.ToShortDateString()</td>
                <td>@user.Gender</td>
                <td>@user.PhoneNumber</td>
                <td>@user.EmailAddress</td>
                <td>@user.Address</td>
                <td>@user.State</td>
                <td>@user.City</td>
                <td>@user.Username</td>
                <td>
                    @*<a href="@Url.Action("Edit", "Admin", new { id = user.UserID })">Edit</a> |*@
                    <a href="@Url.Action("DeleteConfirmed", "Admin", new { id = user.UserID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

