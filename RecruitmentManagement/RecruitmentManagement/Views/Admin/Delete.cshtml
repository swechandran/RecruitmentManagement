
@{
    Layout = null;
}

@model RecruitmentManagement.Models.Registeration

@{
    ViewBag.Title = "Delete User";
}

<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <div>
        <h5>@Model.FirstName @Model.LastName</h5>
        <p>Email: @Model.EmailAddress</p>
        <p>Phone: @Model.PhoneNumber</p>
        <p>Address: @Model.Address</p>
        <p>State: @Model.State</p>
        <p>City: @Model.City</p>
    </div>
    @using (Html.BeginForm("DeleteConfirmed", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("UserID", Model.UserID)
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary">Cancel</a>
        </div>
    }
</div>

