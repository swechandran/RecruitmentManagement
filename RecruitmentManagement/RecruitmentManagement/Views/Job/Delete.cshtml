@model RecruitmentManagement.Models.JobPosting

@{
    ViewBag.Title = "Delete Job Posting";
}

<h2>Delete Job Posting</h2>

<h3>Are you sure you want to delete this job posting?</h3>
<div>
    <h4>Job Posting Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.JobTitle)</dt>
        <dd>@Html.DisplayFor(model => model.JobTitle)</dd>

        <dt>@Html.DisplayNameFor(model => model.JobLocation)</dt>
        <dd>@Html.DisplayFor(model => model.JobLocation)</dd>

        <dt>@Html.DisplayNameFor(model => model.Department)</dt>
        <dd>@Html.DisplayFor(model => model.Department)</dd>

        <dt>@Html.DisplayNameFor(model => model.PostedDate)</dt>
        <dd>@Html.DisplayFor(model => model.PostedDate)</dd>

        <dt>@Html.DisplayNameFor(model => model.NumberOfVacancy)</dt>
        <dd>@Html.DisplayFor(model => model.NumberOfVacancy)</dd>

        <dt>@Html.DisplayNameFor(model => model.InterviewMode)</dt>
        <dd>@Html.DisplayFor(model => model.InterviewMode)</dd>

        <dt>@Html.DisplayNameFor(model => model.LastDateToRegister)</dt>
        <dd>@Html.DisplayFor(model => model.LastDateToRegister)</dd>

        <dt>@Html.DisplayNameFor(model => model.JobPosterImage)</dt>
        <dd>
            @if (Model.JobPosterImage != null)
            {
                <img src="@Url.Content("~/uploads/" + Model.JobPosterImage)" alt="Job Poster Image" style="max-width: 200px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Job", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.JobID)

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", "Job", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
