@model RecruitmentManagement.Models.JobPosting

@{
    ViewBag.Title = "Delete Job Posting";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
/*    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(to right, #6a11cb, #2575fc);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
    }*/

    .delete-job-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
        margin: 20px auto;
    }

    h2, h3, h4 {
        color: #333;
        text-align: center;
    }

    h2 {
        margin-bottom: 20px;
    }

    h3 {
        margin-bottom: 15px;
    }

    h4 {
        margin-top: 20px;
        margin-bottom: 10px;
        color: #555;
    }

    .dl-horizontal {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

        .dl-horizontal dt {
            width: 40%;
            font-weight: bold;
            margin-bottom: 10px;
            color: #444;
        }

        .dl-horizontal dd {
            width: 60%;
            margin-left: 0;
            margin-bottom: 10px;
            color: #666;
        }

    img {
        display: block;
        margin-top: 10px;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a636d;
        }

    hr {
        border: none;
        border-top: 1px solid #ddd;
        margin: 20px 0;
    }
</style>

<div class="delete-job-container">
    <h2>Delete Job Posting</h2>
    <h3>Are you sure you want to delete this job posting?</h3>
    <div>
        <h4>Job Posting Details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.JobTitle)</dt>
            <dd>@Html.DisplayFor(model => model.JobTitle)</dd>

            <dt>@Html.DisplayNameFor(model => model.JobLocation)</dt>
            <dd>@Html.DisplayFor(model => model.JobLocation)</dd>

            <dt>@Html.DisplayNameFor(model => model.Department)</dt>
            <dd>@Html.DisplayFor(model => model.Department)</dd>

            <dt>@Html.DisplayNameFor(model => model.PostedDate)</dt>
            <dd>@Html.DisplayFor(model => model.PostedDate)</dd>

            <dt>@Html.DisplayNameFor(model => model.NumberOfVacancy)</dt>
            <dd>@Html.DisplayFor(model => model.NumberOfVacancy)</dd>

            <dt>@Html.DisplayNameFor(model => model.InterviewMode)</dt>
            <dd>@Html.DisplayFor(model => model.InterviewMode)</dd>

            <dt>@Html.DisplayNameFor(model => model.LastDateToRegister)</dt>
            <dd>@Html.DisplayFor(model => model.LastDateToRegister)</dd>

            <dt>@Html.DisplayNameFor(model => model.JobPosterImage)</dt>
            <dd>
                @if (Model.JobPosterImage != null && Model.JobPosterImage.Length > 0)
                {
                    string base64String = Convert.ToBase64String(Model.JobPosterImage);
                    string imageDataUrl = $"data:image/jpeg;base64,{base64String}";
                    <img src="@imageDataUrl" alt="Job Poster Image" style="max-width: 100px;" />
                }
                else
                {
                    <span>No image available</span>
                }
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "Job", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.JobID)

            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "Index", "Job", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
